---
interface Product {
	name: string;
	description: string;
	logoUrl?: string;
	productUrl?: string;
}

interface Props {
	product: Product;
}

const { product } = Astro.props;

export type { Product };
---

<div class="container">
	<div class="card">
		<main>
			<h4>{product.name}</h4>
			<p>{product.description}</p>
		</main>
		<footer>
			<a href={product.productUrl} target="_blank">Read more â†’</a>
		</footer>
	</div>
	<div class="overlay">
		<img src={product.logoUrl} />
		<h3>{product.name}</h3>
	</div>
</div>

<style>
	.container {
		@apply relative;
	}

	/* main content */

	.card {
		@apply bg-gray-100 text-gray-950 rounded-lg p-4 w-72 h-56;
		@apply flex flex-col justify-between items-end;
	}

	h4 {
		@apply text-xl w-full border-b border-gray-500 mb-2;
	}

	p {
		@apply w-full;
	}

	a {
		@apply text-primary underline;
	}

	/* overlay */

	h3 {
		@apply text-2xl;
	}

	.overlay {
		@apply invisible md:visible;
		@apply absolute top-0 left-0 w-full h-full rounded-lg z-10 bg-primary;
		@apply flex flex-col justify-center items-center gap-2;
		@apply transition-transform;
	}

	.container:hover .overlay {
		@apply -translate-y-28 scale-y-0;
	}
</style>
