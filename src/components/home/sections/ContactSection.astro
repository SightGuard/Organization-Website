---
import { LinkedinIcon, InstagramIcon, FacebookIcon } from 'astro-feather';
import Logo from '../../Logo.astro';

const socials = {
	linkedin: 'https://www.google.pl/',
	instagram: 'https://www.google.pl/',
	facebook: 'https://www.google.pl/',
};
---

<section class="contact-section">
	<main>
		<Logo />
		<div class="contact-container">
			<h1 class="section-header">Find us</h1>
			<p>firmowy_email@gmail.com</p>
			<div class="socials">
				<a href={socials.linkedin}><LinkedinIcon size={36} /></a>
				<a href={socials.instagram}><InstagramIcon size={36} /></a>
				<a href={socials.facebook}><FacebookIcon size={36} /></a>
			</div>
		</div>
	</main>
	<footer>Â© 2024 Bright Path</footer>
</section>

<style>
	.contact-section {
		@apply flex flex-col;
	}

	.contact-section main {
		@apply grow flex flex-col;
		@apply md:grid md:grid-cols-2 md:gap-6 md:items-start;
	}

	.contact-section main h1 {
		@apply text-5xl;
	}

	.contact-section main p {
		@apply text-lg md:text-2xl lg:text-3xl;
	}

	.contact-container {
		@apply flex flex-col gap-6 justify-center grow h-full items-center md:items-start;
	}

	.socials {
		@apply flex flex-row gap-12;
	}

	footer {
		@apply w-full text-sm text-secondary text-center lg:translate-y-6;
	}
</style>
