---
import Layout from '../layouts/Layout.astro';
import TitleSection from '../components/home/sections/TitleSection.astro';
import AboutSection from '../components/home/sections/AboutSection.astro';
import ContactSection from '../components/home/sections/ContactSection.astro';
import ProductsSection from '../components/home/sections/ProductsSection.astro';
import ResearchSection from '../components/home/sections/ResearchSection.astro';
---

<Layout title="Bright Path - Home">
	<TitleSection />
	<AboutSection />
	<ProductsSection />
	<ResearchSection />
	<ContactSection />
</Layout>

<style is:global>
	/* container for a section */
	section {
		@apply w-full min-h-screen flex flex-col;
		@apply px-4 sm:px-24 py-16;
	}

	strong {
		@apply text-secondary;
	}

	/* strong also automatically makes the font bolder. highlight class does not do that */
	.highlight {
		@apply text-secondary;
	}

	.section-header {
		@apply text-7xl font-semibold text-secondary;
	}
</style>
